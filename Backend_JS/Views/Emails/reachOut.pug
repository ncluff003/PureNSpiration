extends baseEmail

block emailContent 
  div.email-header
    p.name #{greeting} Nathan,
    div.timeAndDate
      p.date-stamp #{weekday}, #{day} #{month} #{year}
      p.time-stamp #{hour}:#{minutes} #{timeOfDay}
  div.message-body
    - const messages = message.split(/\r?\n/);
    each message in messages
      p.paragraph #{message}
  p.salutations Sincerely,
  div.from-container
    p.from #{from.split(' ')[0]} #{from.split(' ')[1]}
    p.from-email #{from.split(' ')[2]}